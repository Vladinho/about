.radio
	display inline-block
	cursor pointer

	&__input
		position absolute
		z-index -1
		opacity 0

		&:checked + .radio__label

			&:after
				opacity 1

	&__label
		position relative
		padding-left 36px
		display inline-block
		min-height 18px
		font-family PTSansBold
		font-size 20px
		line-height 28px

		&:before
			position absolute
			top 0
			left 0
			content ''
			sprite($radio)

		&:after
			position absolute
			top 7px
			left 7px
			content ''
			opacity 0
			sprite($radio_point)
			transition opacity .3s ease

		&:empty
			padding-left 28px
